<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.preview.PreviewFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayBackground">

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/coverHeight"
                    android:background="@drawable/ic_cover"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/profile_img_holder"
                    android:layout_width="@dimen/profileImageSize"
                    android:layout_height="@dimen/profileImageSize"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="@dimen/profileImageRoundSize"
                    app:cardElevation="@dimen/profileImageElevation"
                    app:layout_constraintTop_toTopOf="@id/holder"
                    app:layout_constraintEnd_toEndOf="@+id/holder"
                    app:layout_constraintStart_toStartOf="@+id/holder"
                    app:layout_constraintBottom_toBottomOf="@+id/holder">
                <ImageView
                        android:id="@+id/profile_img"
                        android:layout_height="@dimen/profileImageSize"
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/holder"
                    android:layout_width="@dimen/holderSize"
                    android:layout_height="@dimen/holderSize"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/profileImageTopMargin"
                    app:cardCornerRadius="@dimen/holderSizeRound"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    app:cardElevation="@dimen/infoCardElevation"
                    app:layout_constraintTop_toBottomOf="@id/cover">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/infoCardTopMargin"
                        android:layout_marginBottom="@dimen/normalSpacing">
                    <TextView
                            android:id="@+id/name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/bigTextSize"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:fontFamily="@font/actor"/>

                    <TextView
                            android:id="@+id/position_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/textSize"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/name_text"
                            app:fontFamily="@font/actor"/>

                    <TextView
                            android:id="@+id/current_job_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textLightColor"
                            android:textSize="@dimen/textSize"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/position_text"
                            app:fontFamily="@font/actor"/>

                    <ImageView
                            android:id="@+id/location_img"
                            android:layout_width="@dimen/smallIconSize"
                            android:layout_height="@dimen/smallIconSize"
                            android:src="@drawable/ic_location"
                            app:layout_constraintTop_toTopOf="@id/location_text"
                            app:layout_constraintBottom_toBottomOf="@id/location_text"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintEnd_toStartOf="@+id/location_text"
                            android:layout_marginRight="@dimen/smallSpacing"
                            android:layout_marginEnd="@dimen/smallSpacing"/>

                    <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textLightColor"
                            android:textSize="@dimen/textSize"
                            app:layout_constraintStart_toEndOf="@+id/location_img"
                            app:layout_constraintTop_toBottomOf="@id/current_job_text"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:fontFamily="@font/actor"/>
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/experience_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/normalSpacing"
                    android:layout_marginBottom="@dimen/normalSpacing"
                    app:layout_constraintTop_toBottomOf="@id/info_card"
                    app:cardElevation="@dimen/infoCardElevation">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bigSpacing">

                    <TextView
                            android:id="@+id/experience_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preview_fragment_experience"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/smallTextSize"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                            android:id="@+id/current_job_img"
                            android:layout_width="@dimen/jobIconSize"
                            android:layout_height="@dimen/jobIconSize"
                            android:background="#263C3F"
                            android:layout_marginTop="@dimen/bigSpacing"
                            android:layout_marginStart="@dimen/iconHorizontalSpacing"
                            android:layout_marginLeft="@dimen/iconHorizontalSpacing"
                            app:layout_constraintTop_toBottomOf="@id/experience_text"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                            android:id="@+id/current_job_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/textColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            android:textStyle="bold"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/current_job_img"
                            app:layout_constraintBottom_toTopOf="@+id/current_job_desc_text"
                            app:layout_constraintTop_toTopOf="@+id/current_job_img"/>

                    <TextView
                            android:id="@+id/current_job_desc_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/textLightColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            app:layout_constraintStart_toEndOf="@+id/current_job_img"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toBottomOf="@+id/current_job_title_text"
                            app:layout_constraintBottom_toBottomOf="@+id/current_job_img"/>

                    <View
                            android:id="@+id/separator3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/separatorColor"
                            app:layout_constraintBottom_toTopOf="@+id/past_job_img"
                            app:layout_constraintTop_toBottomOf="@+id/current_job_img"
                            app:layout_constraintStart_toEndOf="@+id/current_job_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/normalSpacing"
                            android:layout_marginRight="@dimen/normalSpacing"
                            android:layout_marginLeft="@dimen/normalSpacing"
                            android:layout_marginStart="@dimen/normalSpacing"/>

                    <ImageView
                            android:id="@+id/past_job_img"
                            android:layout_width="@dimen/jobIconSize"
                            android:layout_height="@dimen/jobIconSize"
                            android:background="#263C3F"
                            android:layout_marginTop="@dimen/iconVerticalSpacing"
                            android:layout_marginStart="@dimen/iconHorizontalSpacing"
                            android:layout_marginLeft="@dimen/iconHorizontalSpacing"
                            android:layout_marginBottom="@dimen/smallSpacing"
                            app:layout_constraintTop_toBottomOf="@id/current_job_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                            android:id="@+id/past_job_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/textColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            android:textStyle="bold"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/past_job_img"
                            app:layout_constraintBottom_toTopOf="@+id/past_job_desc_text"
                            app:layout_constraintTop_toTopOf="@+id/past_job_img"/>

                    <TextView
                            android:id="@+id/past_job_desc_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/textLightColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/past_job_img"
                            app:layout_constraintTop_toBottomOf="@+id/past_job_title_text"
                            app:layout_constraintBottom_toBottomOf="@+id/past_job_img"/>


                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/contact_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/normalSpacing"
                    android:layout_marginBottom="@dimen/normalSpacing"
                    app:layout_goneMarginBottom="@dimen/normalSpacing"
                    app:layout_constraintTop_toBottomOf="@id/experience_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardElevation="@dimen/infoCardElevation">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/bigSpacing">

                    <TextView
                            android:id="@+id/contact_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact information"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/smallTextSize"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                            android:id="@+id/mail_img"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:src="@drawable/ic_mail"
                            android:layout_marginTop="@dimen/bigSpacing"
                            android:layout_marginStart="@dimen/iconHorizontalSpacing"
                            android:layout_marginLeft="@dimen/iconHorizontalSpacing"
                            app:layout_constraintTop_toBottomOf="@id/contact_text"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                            android:id="@+id/mail_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preview_fragment_email"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/textColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            android:textStyle="bold"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/mail_img"
                            app:layout_constraintBottom_toTopOf="@+id/mail_text"
                            app:layout_constraintTop_toTopOf="@+id/mail_img"/>

                    <TextView
                            android:id="@+id/mail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            app:layout_constraintStart_toEndOf="@+id/mail_img"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toBottomOf="@+id/mail_title_text"
                            app:layout_constraintBottom_toBottomOf="@+id/mail_img"/>

                    <View
                            android:id="@+id/separator1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/separatorColor"
                            app:layout_constraintBottom_toTopOf="@+id/phone_img"
                            app:layout_constraintTop_toBottomOf="@+id/mail_img"
                            app:layout_constraintStart_toEndOf="@+id/mail_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/normalSpacing"
                            android:layout_marginRight="@dimen/normalSpacing"
                            android:layout_marginLeft="@dimen/normalSpacing"
                            android:layout_marginStart="@dimen/normalSpacing"/>

                    <ImageView
                            android:id="@+id/phone_img"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:src="@drawable/ic_phone"
                            android:layout_marginTop="@dimen/iconVerticalSpacing"
                            android:layout_marginStart="@dimen/iconHorizontalSpacing"
                            android:layout_marginLeft="@dimen/iconHorizontalSpacing"
                            app:layout_constraintTop_toBottomOf="@id/mail_img"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                            android:id="@+id/phone_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preview_fragment_phone"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/textColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            android:textStyle="bold"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/phone_img"
                            app:layout_constraintBottom_toTopOf="@+id/phone_text"
                            app:layout_constraintTop_toTopOf="@+id/phone_img"/>

                    <TextView
                            android:id="@+id/phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/phone_img"
                            app:layout_constraintTop_toBottomOf="@+id/phone_title_text"
                            app:layout_constraintBottom_toBottomOf="@+id/phone_img"/>

                    <View
                            android:id="@+id/separator2"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/separatorColor"
                            app:layout_constraintBottom_toTopOf="@+id/link_img"
                            app:layout_constraintTop_toBottomOf="@+id/phone_img"
                            app:layout_constraintStart_toEndOf="@+id/phone_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="@dimen/normalSpacing"
                            android:layout_marginRight="@dimen/normalSpacing"
                            android:layout_marginLeft="@dimen/normalSpacing"
                            android:layout_marginStart="@dimen/normalSpacing"/>

                    <ImageView
                            android:id="@+id/link_img"
                            android:layout_width="@dimen/iconSize"
                            android:layout_height="@dimen/iconSize"
                            android:src="@drawable/ic_link"
                            android:layout_marginTop="@dimen/iconVerticalSpacing"
                            android:layout_marginStart="@dimen/iconHorizontalSpacing"
                            android:layout_marginLeft="@dimen/iconHorizontalSpacing"
                            android:layout_marginBottom="@dimen/smallSpacing"
                            app:layout_constraintTop_toBottomOf="@id/phone_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                            android:id="@+id/link_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preview_fragment_website"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/textColor"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            android:textStyle="bold"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/link_img"
                            app:layout_constraintBottom_toTopOf="@+id/link_text"
                            app:layout_constraintTop_toTopOf="@+id/link_img"/>

                    <TextView
                            android:id="@+id/link_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="@dimen/infoHorizontalSpacing"
                            android:layout_marginLeft="@dimen/infoHorizontalSpacing"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/link_img"
                            app:layout_constraintTop_toBottomOf="@+id/link_title_text"
                            app:layout_constraintBottom_toBottomOf="@+id/link_img"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>